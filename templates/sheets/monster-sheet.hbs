<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <!-- TO DO: Remove unused styles e.g. resources, resource, -->
    <div class="header-info">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
      <div class="grid grid-3col">
        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="flex-group-center">
          <label for="data.basics.hitDice.value">{{localize "wh3e.actor.hitDice"}}</label>
          <div class="flexrow flex-center flex-between">
            <input type="text" name="data.basics.hitDice.value" value="{{data.basics.hitDice.value}}"
                   data-dtype="Number" />
          </div>
        </div>
        <div class="flex-group-center">
          <label for="data.hitPoints.value">{{localize "wh3e.actor.hitpoints"}}</label>
          <div class="flexrow flex-center flex-between">
            <input type="text" name="data.hitPoints.value" value="{{data.hitPoints.value}}" data-dtype="Number" />
            <span> / </span>
            <input type="text" name="data.hitPoints.max" value="{{data.hitPoints.max}}" data-dtype="Number" />
          </div>
        </div>
        <div class="flex-group-center">
          <label for="data.basics.movement">{{localize "wh3e.actor.movement"}}</label>
          <div class="flexrow flex-center flex-between">
            <input type="text" name="data.basics.movement" value="{{data.basics.movement}}"
                   data-dtype="Number" />
          </div>
        </div>
      </div>
      <div class="grid grid-4col">
        <div class="flex-group-center">
          <label for="calculated.savingThrow">{{localize "wh3e.actor.savingThrow"}}</label>
          <div class="flexrow flex-center flex-between">
            <input type="text" name="calculated.savingThrow" value="Calculated ST" class="read-only"
                   data-dtype="Number" readonly="readonly" />
          </div>
        </div>
        <div class="flex-group-center">
          <label for="calculated.attackValue">{{localize "wh3e.actor.attackValue"}}</label>
          <div class="flexrow flex-center flex-between">
            <input type="text" name="calculated.attackValue" value="Calculated AV" class="read-only"
                   data-dtype="Number" readonly="readonly" />
          </div>
        </div>
        <div class="flex-group-center">
          <label for="data.damage">{{localize "wh3e.item.damage"}}</label>
          <div class="flexrow flex-center flex-between">
            {{> selectOptions field="data.damage" selected=data.damage options=config.damageDice}}
          </div>
        </div>
        <div class="flex-group-center">
          <label for="data.xp">{{localize "wh3e.actor.monster.xp"}}</label>
          <div class="flexrow flex-center flex-between">
            <input type="text" name="data.xp" value="{{data.xp}}"
                   data-dtype="Number" />
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="sheet-content">
    <div class="full-width-field">
      <label for="data.special" style="font-weight: bold;">{{localize "wh3e.item.special"}}</label>
      <input id="data.special" name="data.special" type="text" value="{{data.special}}" data-dtype="String" />
    </div>
    <div class="full-height-field">
      <label for="data.notes" style="font-weight: bold;">{{localize "wh3e.item.notes"}}</label>
      {{editor content=data.notes target="data.notes" button=true owner=owner editable=editable}}
    </div>
  </div>
</form>