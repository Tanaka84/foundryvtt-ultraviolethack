<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <div>
      <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    </div>
  </header>
  <div class="sheet-content">
    <div class="grid grid-2col">
      <div class="flex-group-left">
        <label for="data.armourClass" class="left-text">{{localize "wh3e.item.armourClass"}}</label>
        <div class="flexrow flex-center flex-between">
          <select id="data.armourClass" name="data.armourClass">
            {{#select data.armourClass}}
            {{#each config.armourClasses as |ac acVal|}}
            <option value="{{acVal}}">{{localize ac}}</option>
            {{/each}}
            {{/select}}
          </select>
        </div>
      </div>
      <div class="flex-group-center" style="padding-right: 0;">
        <label for="data.cost">{{localize "wh3e.item.cost"}}</label>
        <div class="flexrow flex-center flex-between">
          <input name="data.cost" type="text" class="center-text" value={{data.cost}}
                 data-dtype="Number" />
          <select id="data.costCoinType" name="data.costCoinType" class="margin-left-20">
            {{#select data.costCoinType}}
            {{#each config.coinTypes as |name type|}}
            <option value="{{type}}">{{localize name}}</option>
            {{/each}}
            {{/select}}
          </select>
        </div>
      </div>
    </div>
    <div class="full-height-field">
      <label for="data.description" style="font-weight: bold;">{{localize "wh3e.item.description"}}</label>
      {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
    </div>
  </div>
</form>