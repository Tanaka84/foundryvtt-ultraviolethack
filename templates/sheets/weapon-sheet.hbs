<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <div>
      <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" style="width: calc(100% - 11px);" />
      </h1>
    </div>
  </header>
  <div class="sheet-content">
    <table>
      <tr class="flex-center">
        <th>{{localize "wh3e.item.damage"}}</th>
        <th>{{localize "wh3e.item.weight"}}</th>
        <th>{{localize "wh3e.item.range"}}</th>
        <th>{{localize "wh3e.item.rateOfFire"}}</th>
        <th>{{localize "wh3e.item.cost"}}</th>
      </tr>
      <tr class="flex-center">
        <td>
          <select id="data.damage" name="data.damage">
            {{#select data.damage}}
            {{#each config.damageDice as |name dice|}}
            <option value="{{dice}}">{{localize name}}</option>
            {{/each}}
            {{/select}}
          </select>
        </td>
        <td>
          <select id="data.weight" name="data.weight">
            {{#select data.weight}}
            {{#each config.weightTypes as |name type|}}
            <option value="{{type}}">{{localize name}}</option>
            {{/each}}
            {{/select}}
          </select>
        </td>
        <td>
          <input name="data.range" type="text" class="center-text" value={{data.range}} data-dtype="Number" />
        </td>
        <td>
          <select id="data.rateOfFire" name="data.rateOfFire">
            {{#select data.rateOfFire}}
            {{#each config.roFShotsPerRound as |name shots|}}
            <option value="{{shots}}">{{localize name}}</option>
            {{/each}}
            {{/select}}
          </select>
        </td>
        <td>
          <input name="data.cost" type="text" class="center-text input-small" value={{data.cost}} data-dtype="Number" />
          <select id="data.costCoinType" name="data.costCoinType">
            {{#select data.costCoinType}}
            {{#each config.coinTypes as |name type|}}
            <option value="{{type}}">{{localize name}}</option>
            {{/each}}
            {{/select}}
          </select>
        </td>
      </tr>
    </table>
    <div class="item-special">
      <label for="data.special" style="font-weight: bold;">{{localize "wh3e.item.special"}}</label>
      <input id="data.special" name="data.special" type="text" value="{{data.special}}" data-dtype="String" />
    </div>
    <div class="item-description">
      <label for="data.description" style="font-weight: bold;">{{localize "wh3e.item.description"}}</label>
      {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
    </div>
  </div>
</form>