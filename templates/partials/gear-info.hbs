    <div class="tab gear" data-group="primary" data-tab="gear">
      <div class="item-list">
        <table>
          <thead>
            <tr>
              <th></th>
              <th>{{localize "wh3e.item.name"}}</th>
              <th>{{localize "wh3e.item.weight"}}</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          {{#each gear as |gear id|}}
            <tr data-item-id="{{gear._id}}">
              <td>
                <img src="{{gear.img}}" title="{{name}}" width="24" height="24"/>
              </td>
              <td>
                <span>{{gear.name}}</span>
              </td>
              <td>
                <span>{{getTextFromKey "wh3e.weightTypes" gear.data.weight}}</span>
              </td>
              <td>
                  <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                  <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
