<div class="tab abilities" data-group="primary" data-tab="abilities">
  <table class="fixed_header">
    <thead>
      <tr>
        <th></th>
        <th>{{localize "wh3e.item.name"}}</th>
        <th>{{localize "wh3e.item.type"}}</th>
        <th>{{localize "wh3e.item.description"}}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each abilities as |ability id|}}
      <tr data-item-id="{{ability._id}}">
        <td>
          <img src="{{ability.img}}" title="{{name}}" width="24" height="24" />
        </td>
        <td>
          <span>{{ability.name}}</span>
        </td>
        <td>
          <span>{{getTextFromKey "wh3e.abilityType" ability.data.type}}</span>
        </td>
        <td>
          <span>{{ability.data.description}}</span>
        </td>
        <td>
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>