  "author": "Neil Benson (@OldScouserRPing)",
  "version": "0.1.0",
  "minimumCoreVersion": "0.7.9",
  "compatibleCoreVersion": "0.7.9",
  "esmodules": ["wh3e.js"],
  "styles": ["css/wh3e.css"],
  "packs": [
    {
      "name": "armour",
      "label": "Armour",
      "path": "/packs/armour.db",
      "entity": "Item"
